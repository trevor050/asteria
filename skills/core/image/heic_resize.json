{
  "id": "heic_resize",
  "name": "HEIC Resize",
  "version": "1.0.0",
  "author": "asteria",
  "aliases": ["heic scale", "resize heic"],
  "category": "transform",
  "description": "Resize for HEIC via convert -> transform -> convert",
  "inputTypes": [".heic", ".heif"],
  "outputType": ".heic",
  "params": [
    {
      "name": "percent",
      "type": "int",
      "label": "Percent",
      "default": 100,
      "presets": [90, 75, 50, 25],
      "min": 10,
      "max": 300,
      "unit": "%"
    }
  ],
  "driver": "pipeline",
  "isMeta": false,
  "executor": {
    "type": "pipeline",
    "steps": [
      {"skillId": "convert_heic_to_png"},
      {"skillId": "resize"},
      {"skillId": "convert_png_to_heic"}
    ]
  },
  "permissions": ["files.read", "files.write", "files.temp", "tools.exec"],
  "dangerLevel": 0
}
